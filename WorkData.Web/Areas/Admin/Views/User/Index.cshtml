@model PagedList<WorkData.Dto.Entity.UserDto>
@using Webdiyer.WebControls.Mvc

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户列表</title>
    @Html.Partial("StaticResource")
</head>
<body class="mainbody">
    <!--导航栏-->
    <div class="location">
        <a href="javascript:history.back(-1);" class="back"><i></i><span>返回上一页</span></a>
        <i class="arrow"></i>
        <span>操作列表</span>
    </div>
    <!--/导航栏-->
    <!--工具栏-->
    <div id="floatHead" class="toolbar-wrap">
        <div class="toolbar">
            <div class="box-wrap">
                <a class="Resource-btn"></a>
                <div class="l-list">
                    <ul class="icon-list">
                        <li><a class="add" href="~/Admin/User/Save?Action=Add"><i></i><span>新增</span></a></li>
                        <li><a onclick="ExePostBack()" id="btnAudit" class="lock" href="javascript:;"><i></i><span>审核</span></a></li>
                        <li><a class="all" href="javascript:;" onclick="checkAll(this);"><i></i><span>全选</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--/工具栏-->
    <!--列表-->
    <div class="table-container" ng-app="App" ng-controller="Cro">
        <table class="ltable">
            <tr>
                <th width="6%">选择</th>
                <th class="thleft">登录名</th>
                <th width="10%">姓名</th>
                <th width="10%">电话</th>
                <th width="10%">创建时间</th>
                <th width="10%">状态</th>
                <th width="30%">操作</th>
            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="tdcenter">
                            <input type="checkbox" class="checkall" value="@item.UserId" />
                        </td>
                        <td>
                            <span>@item.LoginName</span>
                        </td>
                        <td class="tdcenter">
                            <span>@item.Name</span>
                        </td>
                        <td class="tdcenter">
                            <span>@item.CellPhone</span>
                        </td>
                        <td class="tdcenter">
                            <span>@item.AddTime</span>
                        </td>
                        <td class="tdcenter">@(item.IsLock ? "锁定" : "启用")</td>
                        <td class="tdcenter">
                            <a href="~/Admin/User/Save?Action=Remove&Key=@item.UserId"
                               class="btn btn-default" style="color: #fff">删除</a>
                            <a href="~/Admin/User/Save?Action=Edit&Key=@item.UserId"
                               class="btn btn-default" style="color: #fff">编辑</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!--内容底部-->
    <div class="line20"></div>
    <div class="pagelist">
        <div id="PageContent" class="default">
            @Html.Pager(Model, new PagerOptions { PrevPageText = "上页", NextPageText = "下页", FirstPageText = "首页", LastPageText = "尾页", PageIndexParameterName = "pageIndex", ContainerTagName = "div", CssClass = "pagination", CurrentPagerItemTemplate = "<span class=\"current\">{0}</span>", DisabledPagerItemTemplate = "<span class=\"disabled\">{0}</span>" })
        </div>
    </div>
    <!--/内容底部-->
</body>
</html>